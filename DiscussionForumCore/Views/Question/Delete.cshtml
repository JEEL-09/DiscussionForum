@model DiscussionForumCore.Models.Question

@{
    ViewData["Title"] = "Delete";
    
    var PhotoPath = "~/images/" + Model.PhotoPath;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />

    <div style="margin-top:1rem">
        <div class="row justify-content-center m-1">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-header">
                        <h4>@Model.question</h4>
                    </div>
                    @if (Model.PhotoPath != null)
                    {
                        <div class="card-body text-center">
                            <img style="max-width:100%;max-height:15vw;" src="@PhotoPath" asp-append-version="true" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" style="display:flex;align-items:center;justify-content:center;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
